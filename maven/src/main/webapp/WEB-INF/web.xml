<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Servlets -->

    <servlet>
        <servlet-name>BookWorkerService</servlet-name>
        <servlet-class>com.netcracker.server.BookWorkerServiceImpl</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>BookWorkerService</servlet-name>
        <url-pattern>/gwt/book</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>gwt.html</welcome-file>
  </welcome-file-list>

</web-app>
